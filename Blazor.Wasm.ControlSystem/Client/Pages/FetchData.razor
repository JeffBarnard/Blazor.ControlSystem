@page "/fetchdata"
@using Blazor.Wasm.ControlSystem.Shared
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (steps == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var step in steps)
            {
                <tr>
                    <td>@step.Date.ToShortDateString()</td>
                    <td>@step.TemperatureC</td>
                    <td>@step.TemperatureF</td>
                    <td>@step.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    Step[] steps;

    protected override async Task OnInitializedAsync()
    {
        steps = await Http.GetJsonAsync<Step[]>("Step");
    }

}
